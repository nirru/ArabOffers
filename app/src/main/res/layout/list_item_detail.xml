<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/textColor">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:orientation="vertical"
            android:id="@+id/linearimage"
            android:background="@color/textColor">
            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/infiniteViewpager"
                android:layout_width="match_parent"
                android:layout_height="180dip"
                android:clickable="true"
                android:gravity="center"
                />
            <com.daimajia.slider.library.Indicators.PagerIndicator
                android:id="@+id/custom_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:selected_color="#0095BF"
                app:unselected_color="#55333333"
                app:shape="oval"
                app:selected_padding_left="6dp"
                app:selected_padding_right="6dp"
                app:unselected_padding_left="2dp"
                app:unselected_padding_right="2dp"
                app:selected_width="6dp"
                app:selected_height="6dp"
                app:unselected_width="6dp"
                app:unselected_height="6dp"
                />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </HorizontalScrollView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:id="@+id/companyName"
                    android:layout_alignParentRight="true"
                    android:text="Carrefour Super Market"
                    android:textColor="@color/titlecolor"
                    android:textStyle="bold"
                    android:layout_margin="10dip"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/offertext"
                    android:layout_alignParentRight="true"
                    android:text="Hurry Up for This Offer"
                    android:textColor="@color/black"
                    android:layout_margin="10dip"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dip"
                android:gravity="right">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginLeft="5dip"
                    android:textColor="@android:color/darker_gray"
                    android:text="2016-12-29"
                    android:textSize="15dip"
                    android:id="@+id/datedFrom"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/from"
                    android:textSize="18dip"
                    android:textColor="@android:color/black"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dip"
                android:gravity="right">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginLeft="5dip"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/dateduntil"
                android:textSize="15dip"
                android:text="2016-12-31"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/until"
                android:textSize="18dip"
                android:textColor="@android:color/black"
                android:singleLine="true"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_below="@+id/card"
        android:id="@+id/likenComment"
        >

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="30dip"
            android:layout_height="30dip"

            android:layout_marginLeft="15dip"
            android:id="@+id/likenow"
            android:layout_gravity="center"
            android:src="@drawable/thumb_up"
            />
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/likenow"
            android:layout_centerVertical="true"
            android:text="2080986"
            android:layout_marginLeft="5dip"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/black"
            android:singleLine="true"
            android:id="@+id/likes"/>
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@+id/likes"
            android:id="@+id/shareNow"
            android:layout_gravity="center"
            android:src="@drawable/share"
            />
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comments"
            android:layout_alignParentRight="true"
            android:textSize="18dip"
            android:layout_marginRight="20dip"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:textStyle="bold"
            android:id="@+id/comment"
            android:textColor="@color/colorAccent"
           />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/comments"
        android:scrollbars = "vertical"
        android:gravity="right"
        android:orientation="vertical"
        android:layout_marginTop="5dip"
        android:padding="10dip"
        android:layout_below="@+id/likenComment"
        />

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="1">
    </LinearLayout>-->
</RelativeLayout>