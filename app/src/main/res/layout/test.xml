<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="@color/textColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:orientation="vertical"
                android:id="@+id/linearimage"
                android:background="@color/textColor">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:id="@+id/companyName"
                        android:layout_alignParentRight="true"
                        android:text="Carrefour Super Market"
                        android:textColor="@color/titlecolor"
                        android:textStyle="bold"
                        android:layout_margin="10dip"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/offertext"
                        android:layout_alignParentRight="true"
                        android:text="Hurry Up for This Offer"
                        android:textColor="@color/black"
                        android:layout_margin="10dip"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dip"
                    android:gravity="right">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_marginLeft="5dip"
                        android:textColor="@android:color/darker_gray"
                        android:text="2016-12-29"
                        android:textSize="15dip"
                        android:id="@+id/datedFrom"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/from"
                        android:textSize="18dip"
                        android:textColor="@android:color/black"
                        android:singleLine="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dip"
                    android:gravity="right">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_marginLeft="5dip"
                        android:textColor="@android:color/darker_gray"
                        android:id="@+id/dateduntil"
                        android:textSize="15dip"
                        android:text="2016-12-31"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/until"
                        android:textSize="18dip"
                        android:textColor="@android:color/black"
                        android:singleLine="true"/>
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyle_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
        </android.support.v7.widget.RecyclerView>

        <com.google.android.gms.ads.NativeExpressAdView
            android:id="@+id/adView"
            android:layout_width="320dip"
            android:layout_height="300dip"
            android:background="@color/textColor"
            android:layout_gravity="center"
            ads:adSize="320x300"
            android:visibility="gone"
            ads:adUnitId="@string/banner_ad_unit_id"/>

        <LinearLayout
            android:id="@+id/native_ad_container"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:id="@+id/likenComment">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_marginLeft="15dip"
                android:id="@+id/likenow"
                android:layout_gravity="center"
                android:src="@drawable/thumb_up"
                />
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/likenow"
                android:layout_centerVertical="true"
                android:text="2080986"
                android:layout_marginLeft="5dip"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:id="@+id/likes"/>
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_marginLeft="20dip"
                android:layout_toRightOf="@+id/likes"
                android:id="@+id/shareNow"
                android:layout_gravity="center"
                android:src="@drawable/share"
                />
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comments"
                android:layout_alignParentRight="true"
                android:textSize="18dip"
                android:layout_marginRight="20dip"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:textStyle="bold"
                android:id="@+id/comment"
                android:textColor="@color/colorAccent"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/comments"
            android:scrollbars = "vertical"
            android:gravity="right"
            android:orientation="vertical"
            android:layout_marginTop="5dip"
            android:padding="10dip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="1">
            <android.support.v7.widget.AppCompatEditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="0.75"
                android:id="@+id/addcomment"
                android:textSize="12dip"
                android:background="@drawable/rounded_new_3"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginBottom="20dip"
                android:hint="@string/comment"
                android:textColorHint="@color/colorPrimaryDark"
                android:padding="10dip"
                android:textColor="@android:color/black"
                android:textStyle="normal">
            </android.support.v7.widget.AppCompatEditText>
            <android.support.v7.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="send"
                android:id="@+id/buttonSend"
                android:visibility="gone"
                android:layout_weight="0.25"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>